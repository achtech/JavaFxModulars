<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="BorderPane" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: blue;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sofwtare.sarl.user.controller.LoginController">
   <center>
      <AnchorPane style="-fx-background-color: gray;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="500.0" stylesheets="@../../../../resources/roboto/app.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label style="-fx-font-size: 55;" text="Login" textAlignment="CENTER" textFill="#fffefe">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="username" prefHeight="35.0" promptText="Username" style="-fx-font-size: 16;">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="25.0" />
                     </VBox.margin>
                  </TextField>
                  <PasswordField fx:id="password" prefHeight="35.0" promptText="Password" style="-fx-font-size: 16;">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="25.0" />
                     </VBox.margin>
                  </PasswordField>
                  <Button mnemonicParsing="false" onAction="#loginAction" prefHeight="35.0" prefWidth="465.0" style="-fx-font-size: 16; -fx-background-color: grey; -fx-border-color: white;" text="Login" textFill="WHITE">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="25.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#closeAction" prefHeight="35.0" prefWidth="465.0" style="-fx-font-size: 16; -fx-background-color: grey; -fx-border-color: white;" text="Close" textFill="WHITE">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="25.0" />
                     </VBox.margin>
                  </Button>
                  <HBox>
                     <children>
                        <Hyperlink onAction="#notYetregisterAction" text="Not yet Register ?" textFill="WHITE" />
                        <Hyperlink layoutX="10.0" layoutY="10.0" onAction="#forgotPasswordAction" text="Forget password ?" textFill="WHITE">
                           <HBox.margin>
                              <Insets left="250.0" />
                           </HBox.margin>
                        </Hyperlink>
                     </children>
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="15.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
